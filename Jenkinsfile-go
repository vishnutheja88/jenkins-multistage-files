/* Requires the Docker Pipeline plugin */
pipeline {
    agent { docker { image 'golang:1.19.1-alpine' } }
    stages {
        stage('build') {
            steps {
                sh 'go version'
            }
        }
    }
}
/*
Jenkinsfile (Scripted Pipeline)

Requires the Docker Pipeline plugin 
node {
    stage('Build') {
        docker.image('golang:1.19.1-alpine').inside {
            sh 'go version'
        }
    }
}
/*
